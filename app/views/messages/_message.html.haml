.messages__message{data: {message: {id: message.id}}}
  .messages__message__info
    .messages__message__info__talker
      = message.user.name
    .messages__message__info__date
      = message.created_at.to_s
  .messages__lower-message
    - if message.content.present?
      %p.messages__message__text
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?